<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.BackgroundRemover" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/greenDark</item>
        <item name="android:colorPressedHighlight">@color/greenLight</item>
        <item name="colorAccent">@color/goldDark</item>
        <item name="android:textColor">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <item name="alertDialogTheme">@style/CustomAlertDialog</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.BackgroundRemoverDark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/greenDark</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:colorPressedHighlight">#00b248</item>
        <item name="colorAccent">@color/gold</item>
        <item name="colorSecondary">@color/gold</item>
        <item name="android:colorBackground">@color/dark</item>
        <item name="android:itemBackground">@color/dark_</item>
        <item name="android:textColor">@color/greenLight</item>
        <item name="itemTextColor">@color/green</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
