<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BackgroundRemover" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/greenDark</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:colorPressedHighlight">#00b248</item>
        <item name="colorAccent">@color/gold</item>
        <item name="colorSecondary">@color/gold</item>
        <item name="android:colorBackground">@color/dark</item>
        <item name="android:itemBackground">@color/dark_</item>
        <item name="android:textColor">@color/greenLight</item>
        <item name="itemTextColor">@color/green</item>
        <item name="alertDialogTheme">@style/CustomAlertDialog</item>
    </style>
    <style name="ImagePicker" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/greenDark</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:colorPressedHighlight">#00b248</item>
        <item name="colorAccent">@color/gold</item>
        <item name="colorSecondary">@color/gold</item>
        <item name="android:colorBackground">@color/dark</item>
        <item name="android:itemBackground">@color/dark_</item>
        <item name="android:textColor">@color/greenLight</item>
        <item name="itemTextColor">@color/green</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#9effd8</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#9effd8</item>
    </style>
    <style name="CustomAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>
    <style name="Theme.BackgroundRemover.Settings">
        <item name="alertDialogStyle">@style/CustomAlertDialog</item>
    </style>
</resources>
